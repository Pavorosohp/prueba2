SELECT * FROM clave_promotor_cct_direccion WHERE  length(cp) = 1;

-- =====================================================================================================================
-- SE LE AGREGA UN 0 A LA IZQUIERDA A LOS CP CON LONGITUD 4
-- =====================================================================================================================

UPDATE clave_promotor_cct_direccion SET cp = lpad(cp,5,'0') WHERE length(cp) = 4;

