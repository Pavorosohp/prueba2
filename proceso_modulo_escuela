SELECT
 p.*
 ,s.*
 ,i.*
 ,l.level
 ,h.shift
 ,c.*
FROM promoters p
INNER JOIN school_user s
  ON  p.id = s.promoter_id
INNER JOIN school_shift i
 ON i.id = s.school_shift_id
INNER JOIN schools c
 ON c.id = i.school_id
INNER JOIN levels l
 ON i.level_id = l.id
INNER JOIN shifts h
 ON i.shift_id = h.id
WHERE p.fidegar_key='PromotorNorteA99'
 AND (c.name LIKE 'EL PIPILA'
  OR i.key = '09DBN0056R'
  )
;

