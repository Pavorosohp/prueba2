-- =====================================================================================================================
-- Se eliminan  los registros que tienen mas de un mail
-- =====================================================================================================================
DELETE FROM promotores_mail_celular
WHERE correo_electronico IN (
  SELECT correo_electronico
  FROM promotores_mail_celular
  GROUP BY  correo_electronico
  HAVING count(1) > 1
  )
;

