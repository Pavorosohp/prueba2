SELECT shi.*,lev.level
,fts.shift
FROM school_shift shi
INNER JOIN levels lev
  ON lev.id = shi.level_id
INNER JOIN shifts fts
 ON shi.shift_id = fts.id
WHERE key = '09DBN0056R';

